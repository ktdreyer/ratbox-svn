
CC		= @CC@
INSTALL		= @INSTALL@
INSTALL_BIN	= @INSTALL_PROGRAM@
INSTALL_DATA	= @INSTALL_DATA@
INSTALL_SUID	= @INSTALL_PROGRAM@ -o root -m 4755
RM		= @RM@
LEX		= @LEX@
LEXLIB		= @LEXLIB@
CFLAGS		= @CFLAGS@
LDFLAGS   	= -Wl,-export-dynamic
MKDEP		= ${CC} -MM
MV		= @MV@
RM		= @RM@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
exec_suffix	= @exec_suffix@
bindir		= @bindir@
libexecdir	= @libexecdir@
sysconfdir	= @sysconfdir@
localstatedir	= @localstatedir@
# Change this later! -- adrian
moduledir	= @prefix@/modules
automoduledir	= @prefix@/modules/autoload

CONFS		= example.conf opers.txt
DEFAULTCONFS	= ircd.motd kline.conf

IRCDLIBS	= @LIBS@ @SSL_LIBS@

INCLUDES	= -I../include
CPPFLAGS	= ${INCLUDES} @SSL_DEFINE@ @CPPFLAGS@
 
install-mkdirs:
	-@if test ! -d $(sysconfdir); then \
		echo "mkdir $(sysconfdir)"; \
		mkdir $(sysconfdir); \
	fi

install: install-mkdirs build
	@for i in $(PROGS); do \
		if test -f $(bindir)/$$i; then \
			echo $(MV) $(bindir)/$$i $(bindir)/$$i.old; \
			$(MV) $(bindir)/$$i $(bindir)/$$i.old; \
		fi; \
		echo $(INSTALL_BIN) $$i $(bindir); \
		$(INSTALL_BIN) $$i $(bindir); \
	done

	@for i in $(CONFS); do \
		if test -f $(sysconfdir)/$$i; then \
			echo $(MV) $(sysconfdir)/$$i $(sysconfdir)/$$i.old; \
			$(MV) $(sysconfdir)/$$i $(sysconfdir)/$$i.old; \
		fi; \
		echo $(INSTALL_DATA) $$i $(sysconfdir); \
		$(INSTALL_DATA) $$i $(sysconfdir); \
	done

	@for i in $(DEFAULTCONFS); do \
		if test ! -f $(sysconfdir)/$$i; then \
			echo $(INSTALL_DATA) $$i $(sysconfdir); \
			$(INSTALL_DATA) $$i $(sysconfdir); \
		fi; \
	done

build:

clean:

depend:

distclean:
	${RM} -f Makefile
