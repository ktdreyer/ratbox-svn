CC=	CC
CFLAGS=	/STANDARD=ISOC94/INCLUDE=[-.INCLUDE]
LDFLAGS=

ALL : CONVERTCONF,MKPASSWD

CRYPT.C : [-.SRC]CRYPT.C
	COPY [-.SRC]CRYPT.C []

CRYPT.OBJ : CRYPT.C
	$(CC)$(CFLAGS) CRYPT.C

MKPASSWD : MKPASSWD_VMS.OBJ CRYPT.OBJ 
	LINK/EXEC=MKPASSWD MKPASSWD_VMS, CRYPT

CONVERTCONF : CONVERTCONF.OBJ
	LINK CONVERTCONF

CLEAN : 
	DELETE *.OBJ;*
	DELETE *.EXE;*
