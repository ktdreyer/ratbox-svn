  m_userhost.c \
  m_users.c \
  m_version.c \
  m_wallops.c \
  m_who.c \
  m_whois.c \
  m_whowas.c 

OBJS = ${SRCS:.c=.so}

default:	build
build: all
all: $(OBJS)

install: all
	@echo "Installing modules into $(AUTOMODULEDIR) .."
	@for file in $(OBJS); do \
		$(INSTALL_DATA) $$file $(AUTOMODULEDIR); \
	done

.SUFFIXES: .so

.c.so:
	${CC} -DPIC -fPIC -shared ${CPPFLAGS} $(CFLAGS) $< -o $@

.PHONY: depend clean distclean
depend:
	${MKDEP} ${CPPFLAGS} ${SRCS} > .depend.tmp
	${SED} s/\\\.o/\\\.so/ < .depend.tmp > .depend
	${RM} -f .depend.tmp

clean:
	${RM} -f *.so *~ 

distclean: clean
	${RM} -f Makefile

include .depend

