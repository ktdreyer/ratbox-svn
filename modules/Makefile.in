CC		= @CC@
RM		= @RM@
SED             = @SED@
LEX		= @LEX@
LEXLIB		= @LEXLIB@
CFLAGS		= @CFLAGS@ -DIRCD_PREFIX=\"@prefix@\"
MKDEP		= ${CC} ${CFLAGS} -MM
INSTALL		= @INSTALL@
INSTALL_PROGRAM	= @INSTALL_PROGRAM@
INSTALL_DATA	= @INSTALL_DATA@
INSTALL_SUID    = @INSTALL_PROGRAM@ -o root -m 4755
SHELL		= /bin/sh
AUTOMODULEDIR	= @prefix@/modules/autoload

IRCDLIBS	= @LIBS@ @SSL_LIBS@

INCLUDES	= -I../include
CPPFLAGS	= ${INCLUDES} @SSL_DEFINE@ @CPPFLAGS@

SRCS =                          \
  m_accept.c \
  m_admin.c \
  m_away.c \
  m_capab.c \
  m_cburst.c \
  m_challenge.c \
  m_cjoin.c \
  m_close.c \
  m_connect.c \
  m_die.c \
  m_dmem.c \
  m_drop.c \
  m_eob.c \
  m_error.c \
  m_gline.c \
  m_help.c \
  m_info.c \
  m_invite.c \
  m_ison.c \
  m_join.c \
  m_kick.c \
  m_kill.c \
  m_kline.c \
  m_knock.c \
  m_links.c \
  m_list.c \
  m_lljoin.c \
  m_locops.c \
  m_lusers.c \
  m_mode.c \
  m_motd.c \
  m_names.c \
  m_message.c \
  m_nick.c \
  m_oper.c \
  m_operwall.c \
  m_part.c \
  m_pass.c \
  m_ping.c \
  m_pong.c \
  m_quit.c \
  m_rehash.c \
  m_restart.c \
  m_server.c \
  m_set.c \
  m_sjoin.c \
  m_squit.c \
  m_stats.c \
  m_svinfo.c \
  m_testline.c \
  m_time.c \
  m_topic.c \
  m_trace.c \
